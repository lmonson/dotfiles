# set Zsh as your default Tmux shell
set-option -g default-shell /bin/zsh
set-option -g allow-rename off

# remap prefix to Control + a
set -g prefix C-a
unbind C-b
bind C-a send-prefix
bind a send-prefix

set -g xterm-keys on

# force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf

# quick pane cycling
unbind ^A
bind ^A select-pane -t :.+

# These are the keys that come most naturally for splitting panes
bind-key k split-window -h
bind-key j split-window -v
bind-key - resize-pane -U 1
bind-key + resize-pane -D 1
bind-key < resize-pane -L 1
bind-key > resize-pane -R 1

